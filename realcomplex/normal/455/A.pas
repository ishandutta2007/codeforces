var(*++++++++++++++++++++++++++++++++++++++++++++++++++++*)
  n,i,x:longint;(*+++++++++++++++++++++++++++++++++++++++*)
  dp:array[0..100009] of Int64;(*++++++++++++++++++++++++*)
  cnt:array[0..100009] of Int64;(*+++++++++++++++++++++++*)
begin (*++++++++++++++++++++++*)(*+++++++++++++++++++++++*)
  for i:= 0 to 100009 do begin(*+++++++++++++++++++++++++*)
    dp[i] := 0;(*+++++++++++++*)(*+++++++++++++++++++++++*)
    cnt[i] := 0;(*++++++++++++*)(*+++++++++++++++++++++++*)
  end;(*++++++++++++++++++++++*)(*+++++++++++++++++++++++*)
  readln(n);(*++++++++++++++++*)(*+++++++++++++++++++++++*)
  for i:=1 to n do begin(*++++*)(*+++++++++++++++++++++++*)
    read(x);(*++++++++++++++++*)(*+++++++++++++++++++++++*)
    cnt[x]+=1;(*++++++++++++++*)(*+++++++++++++++++++++++*)
  end;(*++++++++++++++++++++++*)(*+++++++++++++++++++++++*)
  dp[1] := cnt[1];(*++++++++++*)(*+++++++++++++++++++++++*)
  for i := 2 to 100009 do begin(*++++++++++++++++++++++++*)
    dp[i] := dp[i-1];(*+++++++*)(*+++++++++++++++++++++++*)
    if dp[i] < ((dp[i-2]) + (cnt[i] * i)) then dp[i] := dp[i-2] + (cnt[i] * i);
  end;(*++++++++++++++++++++++*)(*+++++++++++++++++++++++*)
  writeln(dp[100009]);(*++++++*)(*+++++++++++++++++++++++*)
end.(*++++++++++++++++++++++++*)(*+++++++++++++++++++++++*)